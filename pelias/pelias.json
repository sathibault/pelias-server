{
  "esclient": {
    "keepAlive": true,
    "maxRetries": "3",
    "deadTimeout": "3000",
    "maxSockets": "20",
    "hosts": [
      {
        "env": "dev",
        "protocol": "http",
        "host": "elasticsearch",
        "port": 9200
      }
    ],
    "log": [{
      "type": "stdio",
      "level": [ "error", "warning" ]
    }]
  },
  "logger": {
    "level": "verbose"
  },
  "imports": {
    "adminLookup": true,
    "whosonfirst": {
      "datapath": "/mnt/data/whosonfirst"
    },
    "geonames": {
      "datapath": "/mnt/data/geonames/data",
      "adminLookup": true
    }
  },
  "elasticsearch": {
    "settings": {
      "index": {
        "number_of_replicas": "0",
        "number_of_shards": "1",
        "index.index_concurrency": "24"
      }
    }
  }
}
